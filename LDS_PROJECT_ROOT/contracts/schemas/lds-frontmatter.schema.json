{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://knowledge-architecture.local/schemas/lds-frontmatter.schema.json",
  "title": "LDS Frontmatter Schema",
  "description": "Required frontmatter for operational Markdown files in LDS.",
  "type": "object",
  "required": [
    "doc_id",
    "title",
    "version",
    "status",
    "last_updated",
    "owner"
  ],
  "properties": {
    "doc_id": {
      "type": "string",
      "minLength": 3,
      "pattern": "^[a-z0-9][a-z0-9._-]*$"
    },
    "title": {
      "type": "string",
      "minLength": 3
    },
    "version": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$"
    },
    "status": {
      "type": "string",
      "enum": [
        "stable",
        "beta",
        "deprecated",
        "draft"
      ]
    },
    "last_updated": {
      "type": "string",
      "format": "date"
    },
    "owner": {
      "type": "string",
      "minLength": 2
    },
    "audience": {
      "type": "string"
    },
    "scope": {
      "type": "string"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "related": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  },
  "additionalProperties": false
}
