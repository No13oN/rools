{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://knowledge-architecture.local/schemas/lds-protected-manifest.schema.json",
  "title": "LDS Protected Manifest Schema",
  "type": "object",
  "required": [
    "version",
    "last_updated",
    "hash_algorithm",
    "entries"
  ],
  "properties": {
    "version": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$"
    },
    "last_updated": {
      "type": "string",
      "format": "date"
    },
    "hash_algorithm": {
      "type": "string",
      "const": "sha256"
    },
    "entries": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": [
          "path",
          "tier",
          "owner",
          "sha256",
          "waiver_allowed"
        ],
        "properties": {
          "path": {
            "type": "string",
            "minLength": 3
          },
          "tier": {
            "type": "string",
            "enum": [
              "tier0",
              "tier1"
            ]
          },
          "owner": {
            "type": "string",
            "minLength": 2
          },
          "sha256": {
            "type": "string",
            "pattern": "^[a-f0-9]{64}$"
          },
          "waiver_allowed": {
            "type": "boolean"
          },
          "notes": {
            "type": "string"
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
