{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://knowledge-architecture.local/schemas/lds-contract-manifest.schema.json",
  "title": "LDS Contract Manifest Schema",
  "description": "Canonical checksum and schema registry for all contract files.",
  "type": "object",
  "required": [
    "manifest_id",
    "version",
    "standard_version",
    "last_updated",
    "hash_algorithm",
    "canonical_root",
    "self_hash_excluded",
    "entries"
  ],
  "properties": {
    "manifest_id": {
      "type": "string",
      "const": "lds-contract-manifest"
    },
    "version": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$"
    },
    "standard_version": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$"
    },
    "last_updated": {
      "type": "string",
      "format": "date"
    },
    "hash_algorithm": {
      "type": "string",
      "const": "sha256"
    },
    "canonical_root": {
      "type": "string",
      "const": "contracts"
    },
    "self_hash_excluded": {
      "type": "boolean",
      "const": true
    },
    "entries": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": [
          "path",
          "kind",
          "format",
          "sha256"
        ],
        "properties": {
          "path": {
            "type": "string",
            "pattern": "^contracts/.+"
          },
          "kind": {
            "type": "string",
            "enum": [
              "schema",
              "instance"
            ]
          },
          "format": {
            "type": "string",
            "enum": [
              "json",
              "yaml"
            ]
          },
          "schema_path": {
            "type": "string",
            "pattern": "^contracts/.+\\.schema\\.json$"
          },
          "sha256": {
            "type": "string",
            "pattern": "^[a-f0-9]{64}$"
          }
        },
        "allOf": [
          {
            "if": {
              "properties": {
                "kind": {
                  "const": "schema"
                }
              }
            },
            "then": {
              "required": [
                "path",
                "kind",
                "format",
                "sha256"
              ],
              "properties": {
                "format": {
                  "const": "json"
                },
                "path": {
                  "pattern": "^contracts/.+\\.schema\\.json$"
                }
              },
              "not": {
                "required": [
                  "schema_path"
                ]
              }
            }
          },
          {
            "if": {
              "properties": {
                "kind": {
                  "const": "instance"
                }
              }
            },
            "then": {
              "required": [
                "schema_path"
              ],
              "properties": {
                "path": {
                  "not": {
                    "pattern": "^contracts/.+\\.schema\\.json$"
                  }
                }
              }
            }
          },
          {
            "if": {
              "properties": {
                "format": {
                  "const": "json"
                }
              }
            },
            "then": {
              "properties": {
                "path": {
                  "pattern": "^contracts/.+\\.json$"
                }
              }
            }
          },
          {
            "if": {
              "properties": {
                "format": {
                  "const": "yaml"
                }
              }
            },
            "then": {
              "properties": {
                "path": {
                  "pattern": "^contracts/.+\\.ya?ml$"
                }
              }
            }
          }
        ],
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
