{
  "policy_id": "lds-machine-policy",
  "version": "1.4.0",
  "last_updated": "2026-02-18",
  "sources": [
    "docs/standards/lds-spec.md",
    "docs/standards/lds-execution-card.md",
    "contracts/rules/lds-ruleset.json",
    "contracts/rules/lds-publish-gate.json",
    "contracts/rules/lds-publish-gate.yaml",
    "docs/governance/lds-ownership.yaml",
    "docs/governance/lds-canonical-tier0.md",
    "docs/governance/lds-governance-raci.md",
    "contracts/governance/lds-protected-manifest.json",
    "contracts/memory/lds-memory-policy.json",
    "contracts/retrieval/lds-retrieval-policy.json",
    "contracts/token/lds-token-budget.json",
    "contracts/evaluation/lds-eval-thresholds.json",
    "contracts/governance/lds-contract-manifest.json",
    "contracts/governance/lds-contract-manifest.schema.json",
    "contracts/rules/lds-ruleset.schema.json",
    "contracts/token/lds-tokenizer-mirror.json",
    "contracts/token/lds-tokenizer-mirror.schema.json",
    "contracts/memory/lds-memory-api.json",
    "contracts/memory/lds-memory-api.schema.json",
    "contracts/evaluation/lds-handoff-acceptance.json",
    "contracts/evaluation/lds-handoff-acceptance.schema.json",
    "policies/opa/lds_gate.rego"
  ],
  "must_rules": [
    {
      "id": "LDS-MUST-001",
      "text": "Operational documentation must be Markdown.",
      "category": "format",
      "check_type": "static",
      "auto_check": true
    },
    {
      "id": "LDS-MUST-002",
      "text": "YAML frontmatter must exist in operational Markdown files.",
      "category": "metadata",
      "check_type": "static",
      "auto_check": true
    },
    {
      "id": "LDS-MUST-003",
      "text": "Required frontmatter fields must be present.",
      "category": "metadata",
      "check_type": "static",
      "auto_check": true
    },
    {
      "id": "LDS-MUST-004",
      "text": "Each file must have one primary topic.",
      "category": "structure",
      "check_type": "semantic",
      "auto_check": false
    },
    {
      "id": "LDS-MUST-005",
      "text": "Heading levels must be contiguous.",
      "category": "structure",
      "check_type": "static",
      "auto_check": true
    },
    {
      "id": "LDS-MUST-006",
      "text": "File length must not exceed 10,000 tokens.",
      "category": "token_budget",
      "check_type": "static",
      "auto_check": true
    },
    {
      "id": "LDS-MUST-007",
      "text": "Critical instructions must be inline, not link-only.",
      "category": "retrieval",
      "check_type": "semantic",
      "auto_check": false
    },
    {
      "id": "LDS-MUST-008",
      "text": "Canonical terminology must be used consistently.",
      "category": "terminology",
      "check_type": "semantic",
      "auto_check": false
    },
    {
      "id": "LDS-MUST-009",
      "text": "Time-sensitive claims must include explicit date context.",
      "category": "freshness",
      "check_type": "semantic",
      "auto_check": false
    },
    {
      "id": "LDS-MUST-010",
      "text": "Numeric claims must include source or verification date.",
      "category": "evidence",
      "check_type": "semantic",
      "auto_check": false
    },
    {
      "id": "LDS-MUST-011",
      "text": "Code fences must be language-tagged.",
      "category": "code",
      "check_type": "static",
      "auto_check": true
    },
    {
      "id": "LDS-MUST-012",
      "text": "Secrets must not appear in examples.",
      "category": "security",
      "check_type": "static",
      "auto_check": true
    },
    {
      "id": "LDS-MUST-013",
      "text": "Every image must include meaningful alt text.",
      "category": "media",
      "check_type": "static",
      "auto_check": true
    },
    {
      "id": "LDS-MUST-014",
      "text": "Every architecture diagram must include a text equivalent.",
      "category": "media",
      "check_type": "semantic",
      "auto_check": false
    },
    {
      "id": "LDS-MUST-015",
      "text": "Release must pass semantic gate thresholds.",
      "category": "release",
      "check_type": "semantic",
      "auto_check": false
    }
  ],
  "publish_gate": {
    "static": {
      "required_checks": [
        "frontmatter_schema_valid",
        "required_metadata_present",
        "heading_hierarchy_valid",
        "token_limit_ok",
        "code_fence_language_tags_present",
        "link_integrity_ok",
        "image_alt_text_present",
        "protected_manifest_valid",
        "tier0_hash_integrity",
        "retrieval_policy_valid",
        "token_budget_valid",
        "evaluation_contracts_valid",
        "offline_tokenizer_mirror_valid"
      ]
    },
    "semantic": {
      "weighted_score_min": 90,
      "class_thresholds": {
        "factual": 90,
        "procedural": 90,
        "error_interpretation": 90,
        "comparison": 80,
        "edge_case": 80
      },
      "block_on_critical_hallucination": [
        "factual",
        "procedural",
        "error_interpretation"
      ]
    },
    "governance": {
      "required_checks": [
        "must_exceptions_documented",
        "waivers_unexpired",
        "freshness_valid",
        "waiver_registry_valid",
        "raci_defined",
        "policy_gate_passed",
        "handoff_acceptance_passed"
      ]
    }
  },
  "required_artifacts": [
    "static_report",
    "semantic_scorecard",
    "waiver_list",
    "freshness_report",
    "integrity_report",
    "retrieval_report",
    "token_budget_report",
    "evaluation_report",
    "policy_report",
    "handoff_report",
    "freeze_report"
  ],
  "canonical_contract_manifest": "contracts/governance/lds-contract-manifest.json"
}
