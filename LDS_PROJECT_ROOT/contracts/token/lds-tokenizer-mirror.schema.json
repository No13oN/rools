{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://knowledge-architecture.local/schemas/lds-tokenizer-mirror.schema.json",
  "title": "LDS Tokenizer Mirror Schema",
  "type": "object",
  "required": [
    "version",
    "last_updated",
    "provider",
    "cache_env_var",
    "cache_dir",
    "encodings"
  ],
  "properties": {
    "version": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$"
    },
    "last_updated": {
      "type": "string",
      "format": "date"
    },
    "provider": {
      "type": "string",
      "const": "tiktoken"
    },
    "cache_env_var": {
      "type": "string",
      "const": "TIKTOKEN_CACHE_DIR"
    },
    "cache_dir": {
      "type": "string",
      "pattern": "^vendor/tokenizers/tiktoken-cache$"
    },
    "encodings": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": [
          "name",
          "source_url",
          "cache_key_sha1",
          "expected_sha256",
          "cache_file"
        ],
        "properties": {
          "name": {
            "type": "string",
            "minLength": 3
          },
          "source_url": {
            "type": "string",
            "format": "uri"
          },
          "cache_key_sha1": {
            "type": "string",
            "pattern": "^[a-f0-9]{40}$"
          },
          "expected_sha256": {
            "type": "string",
            "pattern": "^[a-f0-9]{64}$"
          },
          "cache_file": {
            "type": "string",
            "pattern": "^vendor/tokenizers/tiktoken-cache/[a-f0-9]{40}$"
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
