{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://knowledge-architecture.local/schemas/lds-retrieval-policy.schema.json",
  "title": "LDS Retrieval Policy Schema",
  "type": "object",
  "required": [
    "version",
    "last_updated",
    "canonical_read_order",
    "denylist_globs",
    "retrieval_limits"
  ],
  "properties": {
    "version": { "type": "string", "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$" },
    "last_updated": { "type": "string", "format": "date" },
    "canonical_read_order": {
      "type": "array",
      "minItems": 1,
      "items": { "type": "string", "minLength": 3 }
    },
    "denylist_globs": {
      "type": "array",
      "minItems": 1,
      "items": { "type": "string", "minLength": 3 }
    },
    "retrieval_limits": {
      "type": "object",
      "required": ["max_chunks_per_query", "max_total_tokens"],
      "properties": {
        "max_chunks_per_query": { "type": "integer", "minimum": 1 },
        "max_total_tokens": { "type": "integer", "minimum": 256 }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
