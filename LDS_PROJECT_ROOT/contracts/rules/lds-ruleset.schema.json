{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://knowledge-architecture.local/schemas/lds-ruleset.schema.json",
  "title": "LDS Ruleset Schema",
  "type": "object",
  "required": [
    "ruleset_id",
    "version",
    "last_updated",
    "rules"
  ],
  "properties": {
    "ruleset_id": {
      "type": "string",
      "const": "lds-ruleset"
    },
    "version": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$"
    },
    "last_updated": {
      "type": "string",
      "format": "date"
    },
    "rules": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": [
          "id",
          "level",
          "category",
          "check_type",
          "auto_check",
          "description",
          "fail_condition"
        ],
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^LDS-MUST-[0-9]{3}$"
          },
          "level": {
            "type": "string",
            "const": "MUST"
          },
          "category": {
            "type": "string",
            "minLength": 2
          },
          "check_type": {
            "type": "string",
            "enum": [
              "static",
              "semantic",
              "governance"
            ]
          },
          "auto_check": {
            "type": "boolean"
          },
          "description": {
            "type": "string",
            "minLength": 5
          },
          "fail_condition": {
            "type": "string",
            "minLength": 5
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
