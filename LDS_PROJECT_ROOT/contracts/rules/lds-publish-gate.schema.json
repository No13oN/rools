{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://knowledge-architecture.local/schemas/lds-publish-gate.schema.json",
  "title": "LDS Publish Gate Schema",
  "type": "object",
  "required": [
    "version",
    "last_updated",
    "static_gate",
    "semantic_gate",
    "governance_gate",
    "release_decision",
    "required_artifacts"
  ],
  "properties": {
    "version": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$"
    },
    "last_updated": {
      "type": "string",
      "format": "date"
    },
    "static_gate": {
      "type": "object",
      "required": [
        "required"
      ],
      "properties": {
        "required": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string"
          }
        }
      },
      "additionalProperties": false
    },
    "semantic_gate": {
      "type": "object",
      "required": [
        "weighted_score_min",
        "class_thresholds",
        "block_on_critical_hallucination"
      ],
      "properties": {
        "weighted_score_min": {
          "type": "integer",
          "minimum": 0,
          "maximum": 100
        },
        "class_thresholds": {
          "type": "object",
          "required": [
            "factual",
            "procedural",
            "error_interpretation",
            "comparison",
            "edge_case"
          ],
          "properties": {
            "factual": { "type": "integer", "minimum": 0, "maximum": 100 },
            "procedural": { "type": "integer", "minimum": 0, "maximum": 100 },
            "error_interpretation": { "type": "integer", "minimum": 0, "maximum": 100 },
            "comparison": { "type": "integer", "minimum": 0, "maximum": 100 },
            "edge_case": { "type": "integer", "minimum": 0, "maximum": 100 }
          },
          "additionalProperties": false
        },
        "block_on_critical_hallucination": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string"
          }
        }
      },
      "additionalProperties": false
    },
    "governance_gate": {
      "type": "object",
      "required": [
        "required"
      ],
      "properties": {
        "required": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string"
          }
        }
      },
      "additionalProperties": false
    },
    "release_decision": {
      "type": "object",
      "required": [
        "pass_condition",
        "fail_condition"
      ],
      "properties": {
        "pass_condition": { "type": "string" },
        "fail_condition": { "type": "string" }
      },
      "additionalProperties": false
    },
    "required_artifacts": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string"
      }
    }
  },
  "additionalProperties": false
}
